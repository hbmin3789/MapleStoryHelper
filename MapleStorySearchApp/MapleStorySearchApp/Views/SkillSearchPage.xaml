<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MapleStorySearchApp.Views.SkillSearchPage">
    <ContentPage.Content>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="80"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <StackLayout Grid.Row="0">
                
            </StackLayout>
            <Grid Grid.Row="1">
                <ListView ItemsSource="{Binding SkillItems}">
                </ListView>
            </Grid>
        </Grid>
    </ContentPage.Content>
</ContentPage>