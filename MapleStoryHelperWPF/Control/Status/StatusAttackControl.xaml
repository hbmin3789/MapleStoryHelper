<UserControl x:Class="MapleStoryHelperWPF.Control.Status.StatusAttackControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MapleStoryHelperWPF.Control.Status"
             xmlns:converter="clr-namespace:MapleStoryHelperWPF.Converter"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <converter:StatusAttackToStringConverter x:Key="StatusAttackToStringConverter"/>
    </UserControl.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="0.4*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <TextBox Grid.Column="0" Text="{Binding MinStatusAttack, 
                                        Converter={StaticResource StatusAttackToStringConverter}}"/>
        <TextBlock Grid.Column="1" Text=" ~ " FontSize="40"/>
        <TextBox Grid.Column="2" Text="{Binding MaxStatusAttack,
                                        Converter={StaticResource StatusAttackToStringConverter}}"/>
    </Grid>
</UserControl>
