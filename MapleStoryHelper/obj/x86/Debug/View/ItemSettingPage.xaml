<Page
    x:Class="MapleStoryHelper.View.ItemSettingPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MapleStoryHelper.View"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:controls="using:Microsoft.Toolkit.Uwp.UI.Controls"
    xmlns:control="using:MapleStoryHelper.Control"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
    <Page.Resources>
        <Style TargetType="Button">
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="VerticalAlignment" Value="Stretch"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="FontSize" Value="40"/>
        </Style>
    </Page.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <!-- 아이템세팅이 완료된 장비는 색으로 표시하는 기능이 필요할듯 -->
        <Grid>
            <controls:UniformGrid x:ConnectionId='5' x:Name="gdEquipButtons" Margin="10" Columns="5" Rows="6"
                                  Orientation="Vertical">
                <Button Content="반지"/>
                <Button Content="반지"/>
                <Button Content="반지"/>
                <Button Content="반지"/>
                <Button Content="포켓"/>
                
                <Border/>
                <Border/>
                
                <Button Content="펜던트"/>
                <Button Content="펜던트"/>
                <Button Content="무기"/>
                <Button Content="벨트"/>

                <Border/>
                
                <Button Content="모자"/>
                <Button Content="얼장"/>
                <Button Content="눈장"/>
                <Button Content="상의"/>
                <Button Content="하의"/>
                <Button Content="신발"/>

                <Border/>
                <Border/>

                <Button Content="귀고리"/>
                <Button>
                    <TextBlock TextWrapping="Wrap" Text="어깨 장식"/>
                </Button>
                <Button Content="장갑"/>
                <Button Content="안드"/>
                <Button Content="엠블럼"/>
                <Button Content="뱃지"/>
                <Button Content="칭호"/>
                <Button>
                    <TextBlock TextWrapping="Wrap" Text="보조 무기"/>
                </Button>
                <Button Content="망토"/>
                <Button Content="하트"/>
                
            </controls:UniformGrid>
        </Grid>

        <Grid Grid.Column="1">
            <control:StatusDisplayControl Margin="20"/>
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Right" VerticalAlignment="Bottom"
                        Margin="10">
                <Button x:ConnectionId='3' x:Name="btnSave" Width="100" Height="30" Margin="10"
                        Content="저장" FontSize="15"
                                             />
                <Button x:ConnectionId='4' x:Name="btnCancel" Width="100" Height="30" Margin="10"
                        Content="취소" FontSize="15"
                                               />
            </StackPanel>
        </Grid>

        <Frame x:ConnectionId='2' x:Name="ContentFrame" Grid.ColumnSpan="2">
            <Frame.ContentTransitions>
                <TransitionCollection>
                    <NavigationThemeTransition/>
                </TransitionCollection>
            </Frame.ContentTransitions>
        </Frame>
    </Grid>
</Page>

