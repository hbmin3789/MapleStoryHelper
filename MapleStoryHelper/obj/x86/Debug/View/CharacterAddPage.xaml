<Page
    x:Class="MapleStoryHelper.View.CharacterAddPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MapleStoryHelper.View"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:control="using:MapleStoryHelper.Control"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
    <Page.Resources>
        <Style TargetType="Button">
            <Setter Property="Width" Value="300"/>
            <Setter Property="Height" Value="100"/>
            <Setter Property="Margin" Value="10"/>
        </Style>
    </Page.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1.4*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- 직업,레벨,캐릭터 사진 -->
        <Grid>
            <Grid Margin="0,0,0,200">
                <Grid.RowDefinitions>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="50"/>
                </Grid.RowDefinitions>
                <ComboBox x:ConnectionId='5' x:Name="cbCharacterJob" Grid.Row="0" HorizontalAlignment="Stretch"
                          VerticalAlignment="Stretch"
                          SelectedIndex="{Binding CharacterJob}"/>
                <Grid Grid.Row="1">
                    <Button HorizontalAlignment="Right" VerticalAlignment="Top"
                            Width="100" Height="30" Margin="0,10,20,0"
                            Content="이미지 찾기"/>
                    <Image/>
                </Grid>
                <StackPanel Grid.Row="2" Orientation="Horizontal">
                    <TextBlock Margin="0,0,20,0" FontSize="{StaticResource TextBoxBigDescriptionFontSize}"
                               Text="레벨 : "/>
                    <TextBox Width="100" FontSize="{StaticResource TextBoxBigDescriptionFontSize}"
                             Text=""/>
                    <TextBlock Margin="20,0,0,0" FontSize="{StaticResource TextBoxBigDescriptionFontSize}"
                               Text="LV"/>
                </StackPanel>
            </Grid>

        </Grid>

        <!-- 캐릭터 스펙 -->
        <Grid Grid.Column="1">
            <control:StatusDisplayControl x:ConnectionId='4' x:Name="ctrlStatusDisplay"/>
        </Grid>

        <!-- 세팅 버튼 -->
        <Grid Grid.Column="2">
            <StackPanel HorizontalAlignment="Center"
                        VerticalAlignment="Top"
                        Margin="0,10,0,0">
                <Button Content="아이템 세팅"/>
                <Button Content="스킬 세팅"/>
                <Button Content="심볼 세팅"/>
            </StackPanel>

            <StackPanel HorizontalAlignment="Right" VerticalAlignment="Bottom"
                        Orientation="Horizontal"
                        Margin="10">
                <Button x:ConnectionId='2' Width="100" Height="30" Margin="10"
                        Content="저장"
                                             />
                <Button x:ConnectionId='3' Width="100" Height="30" Margin="10"
                        Content="취소"
                                             />
            </StackPanel>
            
        </Grid>
        
    </Grid>
</Page>

