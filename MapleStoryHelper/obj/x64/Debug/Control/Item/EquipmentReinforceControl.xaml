<UserControl
    x:Class="MapleStoryHelper.Control.EquipmentReinforceControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MapleStoryHelper.Control"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:src="using:MapleStoryHelper.Model"
    xmlns:controls="using:Microsoft.Toolkit.Uwp.UI.Controls"
    xmlns:control="using:MapleStoryHelper.Control"
    mc:Ignorable="d">
    <UserControl.Resources>

        <src:ListResources x:Key="ListResources"/>
        
        <Style TargetType="CheckBox">
            <Setter Property="Margin" Value="0, 4.5, 0, 0"/>
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="FontSize" Value="{StaticResource TextBoxMiddleDescriptionFontSize}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Height" Value="auto"/>
        </Style>

        <Style x:Key="lbScrollStyle" TargetType="ListBox">
            <Setter Property="ItemTemplate">
                <Setter.Value>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <Image Source="{Binding ImageSource}" MaxWidth="45"/>
                            <TextBlock Text="{Binding Name}" Margin="10,0,0,0"
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                    </DataTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>
    <Grid Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <!-- 스타포스,추옵 -->
        <Grid Grid.Column="0" Grid.Row="0">
            <control:AdditionalOptionControl/>
        </Grid>

        <Grid Grid.Column="0" Grid.Row="1">
            
        </Grid>

        <!-- 잠재능력 -->
        <Grid Grid.Column="1" Grid.Row="0">
            <local:PotentialControl/>
        </Grid>

        <!-- 주문서 -->
        <Grid Grid.Column="1" Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <ListBox x:ConnectionId='3' x:Name="lbScroll" Grid.Column="0" Margin="10"
                     Style="{StaticResource lbScrollStyle}"/>

            <StackPanel Grid.Column="1"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center">
                <Button Content="추가하기" Margin="0,0,0,10"/>
                <Button Content="삭제하기" Margin="0,10,0,0"/>
            </StackPanel>
            
            <ListBox x:ConnectionId='4' x:Name ="lbAppliedScroll" Grid.Column="2" Margin="10"
                     Style="{StaticResource lbScrollStyle}"/>

        </Grid>
    </Grid>
</UserControl>

