<Page
    x:Class="MapleStoryHelper.View.ItemSettingPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MapleStoryHelper.View"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:controls="using:Microsoft.Toolkit.Uwp.UI.Controls"
    xmlns:control="using:MapleStoryHelper.Control"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
    <Page.Resources>
        <Style TargetType="Button">
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="VerticalAlignment" Value="Stretch"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="FontSize" Value="40"/>
        </Style>
    </Page.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <!-- 아이템세팅이 완료된 장비는 색으로 표시하는 기능이 필요할듯 -->
        <Grid>
            <controls:UniformGrid Margin="10" Columns="5" Rows="6"
                                  Orientation="Vertical">
                <Button x:ConnectionId='5' CommandParameter="Ring1"
                                                        >
                    <Grid>
                        <TextBlock Text="반지"/>
                        <Image x:ConnectionId='35' x:Name="imgRing1"/>
                    </Grid>
                </Button>
                <Button x:ConnectionId='6' CommandParameter="Ring2"
                                                        >
                    <Grid>
                        <TextBlock Text="반지"/>
                        <Image x:ConnectionId='34' x:Name="imgRing2"/>
                    </Grid>
                </Button>
                <Button x:ConnectionId='7' CommandParameter="Ring3"
                                                        >
                    <Grid>
                        <TextBlock Text="반지"/>
                        <Image x:ConnectionId='33' x:Name="imgRing3"/>
                    </Grid>
                </Button>
                <Button x:ConnectionId='8' CommandParameter="Ring4"
                                                        >
                    <Grid>
                        <TextBlock Text="반지"/>
                        <Image x:ConnectionId='32' x:Name="imgRing4"/>
                    </Grid>
                </Button>
                <Button x:ConnectionId='9' CommandParameter="Pocket"
                                                        >
                    <Grid>
                        <TextBlock Text="포켓"/>
                        <Image x:ConnectionId='31' x:Name="imgPocket"/>
                    </Grid>
                </Button>
                
                <Border/>
                <Border/>
                
                <Button x:ConnectionId='10' Content="펜던트"
                        CommandParameter="Pendant1"
                                                        />
                <Button x:ConnectionId='11' Content="펜던트"
                        CommandParameter="Pendant2"
                                                        />
                <Button x:ConnectionId='12' CommandParameter="Weapon"
                                                        >
                    <Grid>
                        <TextBlock Text="무기"/>
                        <Image x:ConnectionId='30' x:Name="imgWeapon"/>
                    </Grid>
                </Button>
                <Button x:ConnectionId='13' Content="벨트"
                        CommandParameter="Belt"
                                                        />

                <Border/>
                
                <Button x:ConnectionId='14' Content="모자"
                        CommandParameter="Cap"
                                                        />
                <Button x:ConnectionId='15' Content="얼장"
                        CommandParameter="Face"
                                                        />
                <Button x:ConnectionId='16' Content="눈장"
                        CommandParameter="Eye"
                                                        />
                <Button x:ConnectionId='17' Content="상의"
                        CommandParameter="Clothes"
                                                        />
                <Button x:ConnectionId='18' Content="하의"
                        CommandParameter="Pants"
                                                        />
                <Button x:ConnectionId='19' Content="신발"
                        CommandParameter="Shoes"
                                                        />

                <Border/>
                <Border/>

                <Button x:ConnectionId='20' Content="귀고리"
                        CommandParameter="Ear"
                                                        />
                <Button x:ConnectionId='21' CommandParameter="Shoulder"
                                                        >
                    <TextBlock TextWrapping="Wrap" Text="어깨&#x0a;장식"/>
                </Button>
                <Button x:ConnectionId='22' Content="장갑"
                        CommandParameter="Gloves"
                                                        />
                <Button x:ConnectionId='23' Content="안드"
                        CommandParameter="Android"
                                                        />
                <Button x:ConnectionId='24' Content="엠블럼"
                        CommandParameter="Emblem"
                                                        />
                <Button x:ConnectionId='25' Content="뱃지"
                        CommandParameter="Badge"
                                                        />
                <Button x:ConnectionId='26' Content="칭호"
                        CommandParameter="Medal"
                                                        />
                <Button x:ConnectionId='27' CommandParameter="SubWeapon"
                                                        >
                    <TextBlock TextWrapping="Wrap" Text="보조&#x0a;무기"/>
                </Button>
                <Button x:ConnectionId='28' Content="망토" CommandParameter="Cape"
                                                        />
                <Button x:ConnectionId='29' Content="하트" CommandParameter="Heart"
                                                        />
                
            </controls:UniformGrid>
        </Grid>

        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition Height="100"/>
            </Grid.RowDefinitions>
            <control:StatusDisplayControl x:ConnectionId='2' x:Name="ctrlStatusDisplay" Margin="20"/>
            
            <Grid Grid.Row="1">
                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Right">
                    <Button x:ConnectionId='3' x:Name="btnSave" Width="200" Margin="10" 
                            Content="저장"
                                                 />
                    <Button x:ConnectionId='4' x:Name="btnCancel" Width="200" Margin="10"
                            Content="취소"
                                                   />
                </StackPanel>
            </Grid>
            
        </Grid>
    </Grid>
</Page>

